{% extends 'base.html.twig' %}

{% block title %}Cancel Subscription{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Cancel Subscription</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                <div class="flex items-start">
                    <svg class="w-6 h-6 text-yellow-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <div>
                        <h3 class="font-semibold text-yellow-900">Are you sure you want to cancel?</h3>
                        <p class="text-yellow-700 text-sm mt-1">
                            We're sorry to see you go. Please let us know if there's anything we can do to improve your experience.
                        </p>
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <h3 class="font-semibold text-gray-900 mb-2">Current Plan</h3>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <div class="flex justify-between items-center">
                        <div>
                            <h4 class="font-bold text-gray-900">{{ subscription.plan.name }}</h4>
                            <p class="text-gray-600 text-sm">{{ subscription.plan.description }}</p>
                        </div>
                        <div class="text-xl font-bold text-gray-900">
                            {{ subscription.plan.formattedPrice }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <h3 class="font-semibold text-gray-900 mb-3">What you'll lose:</h3>
                <ul class="space-y-2">
                    {% for planFeature in subscription.plan.planFeatures %}
                        {% if planFeature.enabled %}
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-gray-700">{{ planFeature.feature.name }}</span>
                        </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <h3 class="font-semibold text-gray-900 mb-4">Cancellation Options</h3>
                
                <form method="post" action="{{ path('subscription_cancel') }}" class="space-y-4">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <label class="flex items-start cursor-pointer">
                            <input type="radio" name="immediately" value="0" checked class="mt-1 mr-3">
                            <div>
                                <div class="font-semibold text-gray-900">Cancel at period end</div>
                                <div class="text-sm text-gray-600">
                                    You'll retain access until {{ subscription.currentPeriodEnd|date('M d, Y') }}
                                </div>
                            </div>
                        </label>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg">
                        <label class="flex items-start cursor-pointer">
                            <input type="radio" name="immediately" value="1" class="mt-1 mr-3">
                            <div>
                                <div class="font-semibold text-gray-900">Cancel immediately</div>
                                <div class="text-sm text-gray-600">
                                    Your access will end right away (no refund)
                                </div>
                            </div>
                        </label>
                    </div>

                    <div class="flex gap-4 mt-6">
                        <button type="submit" 
                                class="flex-1 bg-red-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-red-600 transition-colors">
                            Confirm Cancellation
                        </button>
                        <a href="{{ path('subscription_current') }}" 
                           class="flex-1 bg-gray-200 text-gray-700 py-3 px-6 rounded-lg font-semibold hover:bg-gray-300 transition-colors text-center">
                            Keep Subscription
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
