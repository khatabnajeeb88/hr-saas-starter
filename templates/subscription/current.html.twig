{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Current Subscription{% endblock %}

{% block dashboard_content %}
<div class="">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Subscription Management</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">{{ subscription.plan.name }}</h2>
                    <p class="text-gray-600 mt-1">{{ subscription.plan.description }}</p>
                </div>
                <div class="text-right">
                    <div class="text-3xl font-bold text-gray-900">{{ subscription.plan.formattedPrice }}</div>
                    {% if subscription.onTrial %}
                        <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full mt-2">
                            Trial Period
                        </span>
                    {% elseif subscription.status == 'active' %}
                        <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full mt-2">
                            Active
                        </span>
                    {% elseif subscription.status == 'canceled' %}
                        <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full mt-2">
                            Canceled
                        </span>
                    {% elseif subscription.status == 'past_due' %}
                        <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full mt-2">
                            Past Due
                        </span>
                    {% endif %}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="text-sm font-semibold text-gray-600 mb-2">Billing Cycle</h3>
                    <p class="text-gray-900">
                        {% if subscription.currentPeriodStart and subscription.currentPeriodEnd %}
                            {{ subscription.currentPeriodStart|date('M d, Y') }} - {{ subscription.currentPeriodEnd|date('M d, Y') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </p>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-600 mb-2">Next Billing Date</h3>
                    <p class="text-gray-900">
                        {% if subscription.currentPeriodEnd %}
                            {{ subscription.currentPeriodEnd|date('M d, Y') }}
                            {% if stats.days_remaining is defined %}
                                <span class="text-sm text-gray-600">({{ stats.days_remaining }} days)</span>
                            {% endif %}
                        {% else %}
                            N/A
                        {% endif %}
                    </p>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-600 mb-2">Team Members</h3>
                    <p class="text-gray-900">
                        {{ stats.current_members ?? 0 }}
                        {% if stats.member_limit %}
                            / {{ stats.member_limit }}
                        {% else %}
                            / Unlimited
                        {% endif %}
                    </p>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-gray-600 mb-2">Auto-Renewal</h3>
                    <p class="text-gray-900">
                        {% if subscription.autoRenew %}
                            <span class="text-green-600">Enabled</span>
                        {% else %}
                            <span class="text-red-600">Disabled</span>
                        {% endif %}
                    </p>
                </div>
            </div>

            {% if subscription.onTrial and subscription.trialEndsAt %}
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <div>
                        <h4 class="font-semibold text-blue-900">Trial Period Active</h4>
                        <p class="text-blue-700 text-sm mt-1">
                            Your trial ends on {{ subscription.trialEndsAt|date('M d, Y') }}. 
                            You won't be charged until the trial period ends.
                        </p>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if subscription.status == 'canceled' and subscription.endsAt %}
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-yellow-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <div>
                        <h4 class="font-semibold text-yellow-900">Subscription Canceled</h4>
                        <p class="text-yellow-700 text-sm mt-1">
                            Your subscription will end on {{ subscription.endsAt|date('M d, Y') }}. 
                            You can resume your subscription before this date.
                        </p>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="flex gap-4">
                {% if subscription.status == 'canceled' %}
                    <a href="{{ path('subscription_resume') }}" 
                       class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors">
                        Resume Subscription
                    </a>
                {% else %}
                    <a href="{{ path('subscription_upgrade') }}" 
                       class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
                        Change Plan
                    </a>
                    <a href="{{ path('subscription_cancel') }}" 
                       class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors">
                        Cancel Subscription
                    </a>
                {% endif %}
                <a href="{{ path('subscription_plans') }}" 
                   class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300 transition-colors">
                    View All Plans
                </a>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Plan Features</h3>
            <ul class="space-y-3">
                {% if subscription.plan.teamMemberLimit %}
                <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700">Up to {{ subscription.plan.teamMemberLimit }} team members</span>
                </li>
                {% else %}
                <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700">Unlimited team members</span>
                </li>
                {% endif %}

                {% for planFeature in subscription.plan.planFeatures %}
                    {% if planFeature.enabled %}
                    <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-gray-700">
                            {{ planFeature.feature.name }}
                            {% if planFeature.value %}
                                ({{ planFeature.value }})
                            {% endif %}
                        </span>
                    </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
