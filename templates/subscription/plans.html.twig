{% extends 'base.html.twig' %}

{% block title %}Subscription Plans{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Choose Your Plan</h1>
            <p class="text-xl text-gray-600">Select the perfect plan for your team</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for plan in plans %}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden border-2 {% if plan.slug == 'pro' %}border-blue-500{% else %}border-gray-200{% endif %} hover:shadow-xl transition-shadow">
                {% if plan.slug == 'pro' %}
                <div class="bg-blue-500 text-white text-center py-2 text-sm font-semibold">
                    MOST POPULAR
                </div>
                {% endif %}
                
                <div class="p-6">
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{{ plan.name }}</h3>
                    <div class="mb-4">
                        <span class="text-4xl font-bold text-gray-900">${{ plan.price }}</span>
                        <span class="text-gray-600">/{{ plan.billingInterval == 'yearly' ? 'year' : 'month' }}</span>
                    </div>
                    
                    {% if plan.description %}
                    <p class="text-gray-600 mb-6">{{ plan.description }}</p>
                    {% endif %}

                    <div class="mb-6">
                        <h4 class="font-semibold text-gray-900 mb-3">Features:</h4>
                        <ul class="space-y-2">
                            {% if plan.teamMemberLimit %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-700">Up to {{ plan.teamMemberLimit }} team members</span>
                            </li>
                            {% else %}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-gray-700">Unlimited team members</span>
                            </li>
                            {% endif %}

                            {% for planFeature in plan.planFeatures %}
                                {% if planFeature.enabled %}
                                <li class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    <span class="text-gray-700">
                                        {{ planFeature.feature.name }}
                                        {% if planFeature.value %}
                                            ({{ planFeature.value }})
                                        {% endif %}
                                    </span>
                                </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>

                    <a href="{{ path('subscription_subscribe', {planSlug: plan.slug}) }}" 
                       class="block w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors
                              {% if plan.slug == 'pro' %}
                                  bg-blue-500 text-white hover:bg-blue-600
                              {% else %}
                                  bg-gray-100 text-gray-900 hover:bg-gray-200
                              {% endif %}">
                        {% if plan.price == '0.00' %}
                            Get Started Free
                        {% else %}
                            Choose {{ plan.name }}
                        {% endif %}
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="mt-12 text-center">
            <p class="text-gray-600">All plans include 14-day free trial. No credit card required.</p>
        </div>
    </div>
</div>
{% endblock %}
