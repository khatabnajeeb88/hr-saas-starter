{% extends 'layouts/dashboard.html.twig' %}

{% block title %}{{ 'payment_method.title'|trans }}{% endblock %}

{% block dashboard_content %}
<div class="">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('subscription_current') }}" class="text-gray-700 hover:text-gray-900">
                    {{ 'subscription.current.title'|trans }}
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-gray-500 md:ml-2">{{ 'payment_method.title'|trans }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ 'payment_method.title'|trans }}</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message|trans }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message|trans }}
        </div>
    {% endfor %}

    {% if not subscription %}
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg class="w-20 h-20 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ 'payment_method.no_subscription_title'|trans }}</h3>
            <p class="text-gray-600 mb-6">{{ 'payment_method.no_subscription_msg'|trans }}</p>
            <a href="{{ path('subscription_plans') }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                {{ 'invoice.view_plans'|trans }}
            </a>
        </div>
    {% else %}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Current Payment Method -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold mb-4">{{ 'payment_method.current_method'|trans }}</h2>
                
                {% if subscription.paymentMethodId %}
                    <div class="flex items-start justify-between">
                        <div class="flex items-center">
                            <svg class="w-12 h-12 text-gray-400 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                            </svg>
                            <div>
                                <p class="font-medium text-gray-900">{{ 'payment_method.card_ending'|trans }}</p>
                                <p class="text-sm text-gray-500">{{ 'payment_method.expires'|trans }}: {{ subscription.paymentMethodId }}</p> {# Note: ID is not expiration, keeping structure but label might be confusing if not updated in logic, but here it matches 'Method ID' from original code comments or context #}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-6 flex space-x-3">
                        <a href="{{ path('payment_method_update') }}" class="flex-1 text-center bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">
                            {{ 'payment_method.update_card'|trans }}
                        </a>
                        <form action="{{ path('payment_method_remove') }}" method="post" class="flex-1" onsubmit="return confirm('{{ 'payment_method.remove_confirm'|trans }}');">
                            <button type="submit" class="w-full text-center border border-red-300 text-red-700 px-4 py-2 rounded-md hover:bg-red-50">
                                {{ 'payment_method.remove'|trans }}
                            </button>
                        </form>
                    </div>
                {% else %}
                    <div class="text-center py-8">
                        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                        </svg>
                        <p class="text-gray-600 mb-4">{{ 'payment_method.no_method'|trans }}</p>
                        <a href="{{ path('payment_method_update') }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                            {{ 'payment_method.add_method'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>

            <!-- Subscription Info -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold mb-4">{{ 'payment_method.subscription_details'|trans }}</h2>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">{{ 'payment_method.plan'|trans }}</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ subscription.plan.name }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">{{ 'payment_method.status'|trans }}</dt>
                        <dd class="mt-1">
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                {% if subscription.status == 'active' %}bg-green-100 text-green-800
                                {% elseif subscription.status == 'trial' %}bg-blue-100 text-blue-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ subscription.status|capitalize }}
                            </span>
                        </dd>
                    </div>
                    {% if subscription.nextBillingDate %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">{{ 'payment_method.next_billing'|trans }}</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ subscription.nextBillingDate|date('M d, Y') }}</dd>
                    </div>
                    {% endif %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">{{ 'payment_method.amount'|trans }}</dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900">{{ subscription.plan.formattedPrice }}</dd>
                    </div>
                </dl>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
