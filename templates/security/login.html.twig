{% extends 'layouts/auth.html.twig' %}

{% block title %}{{ 'login.title'|trans|default('Sign In') }}{% endblock %}

{% block auth_title %}{{ 'login.welcome_back'|trans|default('Welcome Back') }}{% endblock %}
{% block auth_subtitle %}{{ 'login.subtitle'|trans|default('Sign in to your account to continue') }}{% endblock %}

{% block auth_content %}
    {% if error %}
        <div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200">
            <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-sm text-red-800">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-4 p-4 rounded-lg bg-blue-50 border border-blue-200">
            <p class="text-sm text-blue-800">
                {{ 'login.already_logged_in'|trans|default('You are logged in as') }} {{ app.user.userIdentifier }}, 
                <a href="{{ logout_path() }}" class="font-medium underline hover:text-blue-900">{{ 'login.logout'|trans|default('Logout') }}</a>
            </p>
        </div>
    {% endif %}

    <form method="post" class="space-y-5">
        <!-- Email Field -->
        <div>
            <label for="inputEmail" class="block text-sm font-medium text-slate-700 mb-2">
                {{ 'login.email'|trans|default('Email') }}
            </label>
            <input 
                type="email" 
                value="{{ last_username }}" 
                name="email" 
                id="inputEmail" 
                class="w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400" 
                placeholder="{{ 'login.email_placeholder'|trans|default('Enter your email') }}"
                autocomplete="email" 
                required 
                autofocus
            >
        </div>

        <!-- Password Field -->
        <div>
            <div class="flex items-center justify-between mb-2">
                <label for="inputPassword" class="block text-sm font-medium text-slate-700">
                    {{ 'login.password'|trans|default('Password') }}
                </label>
                <a href="{{ path('app_forgot_password_request') }}" class="text-sm text-purple-600 hover:text-purple-700 font-medium">
                    {{ 'login.forgot_password'|trans|default('Forgot password?') }}
                </a>
            </div>
            <input 
                type="password" 
                name="password" 
                id="inputPassword" 
                class="w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400" 
                placeholder="{{ 'login.password_placeholder'|trans|default('Enter your password') }}"
                autocomplete="current-password" 
                required
            >
        </div>

        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <!-- Submit Button -->
        <button 
            type="submit" 
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
        >
            {{ 'login.sign_in'|trans|default('Sign In') }}
        </button>
    </form>
{% endblock %}

{% block auth_footer %}
    <p class="text-sm text-slate-600">
        {{ 'login.no_account'|trans|default("Don't have an account?") }}
        <a href="{{ path('app_register') }}" class="text-purple-600 hover:text-purple-700 font-medium">
            {{ 'login.sign_up'|trans|default('Sign up') }}
        </a>
    </p>
{% endblock %}
