{% extends 'email/base.html.twig' %}

{% block title %}{{ 'email.trial_ending.title'|trans }}{% endblock %}

{% block stylesheets %}
    <style>
        .header { background: #F59E0B; }
        .highlight { background: #FEF3C7; padding: 15px; margin: 20px 0; border-radius: 6px; }
        .button { background: #F59E0B; }
    </style>
{% endblock %}

{% block content %}
    <p>{{ 'email.trial_ending.greeting'|trans({'%email%': user.email}) }},</p>
    
    <div class="highlight">
        <strong>{{ 'email.trial_ending.highlight'|trans({'%plan%': subscription.plan.name, '%days%': days_remaining}) }}</strong>
    </div>
    
    <p>{{ 'email.trial_ending.message'|trans({'%date%': subscription.trialEndsAt|date('M d, Y')})|raw }}</p>
    
    <p><strong>{{ 'email.trial_ending.next_steps.title'|trans }}</strong></p>
    <ul>
        <li>{{ 'email.trial_ending.next_steps.1'|trans({'%plan%': subscription.plan.name}) }}</li>
        <li>{{ 'email.trial_ending.next_steps.2'|trans }}</li>
        <li>{{ 'email.trial_ending.next_steps.3'|trans }}</li>
    </ul>
    
    <p><strong>{{ 'email.trial_ending.plan_details.title'|trans }}</strong></p>
    <ul>
        <li>{{ subscription.plan.name }} - {{ subscription.plan.formattedPrice }}</li>
        <li>{{ subscription.plan.teamMemberLimit ?? 'email.trial_ending.plan_details.unlimited'|trans }} {{ 'email.trial_ending.plan_details.members'|trans }}</li>
        <li>{{ 'email.trial_ending.plan_details.features'|trans({'%plan%': subscription.plan.name}) }}</li>
    </ul>
    
    <div style="text-align: center;">
        <a href="{{ url('payment_methods') }}" class="button">{{ 'email.trial_ending.button'|trans }}</a>
    </div>
    
    <p>{{ 'email.trial_ending.closing'|trans }}</p>
    
    <p>{{ 'email.trial_ending.questions'|trans }}</p>
{% endblock %}
