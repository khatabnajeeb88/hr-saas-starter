{% extends 'email/base.html.twig' %}

{% block title %}{{ 'email.subscription_suspended.title'|trans }}{% endblock %}

{% block stylesheets %}
    <style>
        .header { background: #DC2626; }
        .alert { background: #FEE2E2; border: 2px solid #DC2626; padding: 20px; margin: 20px 0; border-radius: 6px; text-align: center; }
        .button { background: #DC2626; }
    </style>
{% endblock %}

{% block content %}
    <p>{{ 'email.subscription_suspended.greeting'|trans({'%email%': user.email}) }},</p>
    
    <div class="alert">
        <h2 style="margin: 0 0 10px 0; color: #DC2626;">{{ 'email.subscription_suspended.alert.title'|trans }}</h2>
        <p style="margin: 0;">{{ 'email.subscription_suspended.alert.message'|trans }}</p>
    </div>
    
    <p>{{ 'email.subscription_suspended.message'|trans({'%team%': team.name, '%plan%': subscription.plan.name}) }}</p>
    
    <p><strong>{{ 'email.subscription_suspended.impact.title'|trans }}:</strong></p>
    <ul>
        <li>{{ 'email.subscription_suspended.impact.1'|trans({'%plan%': subscription.plan.name}) }}</li>
        <li>{{ 'email.subscription_suspended.impact.2'|trans }}</li>
        <li>{{ 'email.subscription_suspended.impact.3'|trans }}</li>
    </ul>
    
    <p><strong>{{ 'email.subscription_suspended.reactivate.title'|trans }}:</strong></p>
    <ol>
        <li>{{ 'email.subscription_suspended.reactivate.1'|trans }}</li>
        <li>{{ 'email.subscription_suspended.reactivate.2'|trans }}</li>
        <li>{{ 'email.subscription_suspended.reactivate.3'|trans }}</li>
        <li>{{ 'email.subscription_suspended.reactivate.4'|trans }}</li>
    </ol>
    
    <div style="text-align: center;">
        <a href="{{ url('payment_methods') }}" class="button">{{ 'email.subscription_suspended.button'|trans }}</a>
    </div>
    
    <p>{{ 'email.subscription_suspended.closing'|trans }}</p>
    
    <p><strong>{{ 'email.subscription_suspended.questions'|trans }}</strong> {{ 'email.subscription_suspended.contact'|trans }}</p>
{% endblock %}
