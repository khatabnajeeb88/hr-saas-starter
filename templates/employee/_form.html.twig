{# Create Tag Modal #}
<dialog id="createTagModal" class="modal" data-controller="create-entity" data-create-entity-create-url-value="{{ path('app_tag_create_ajax') }}" data-create-entity-select-id-value="employee_tags">
	<div class="modal-box bg-white dark:bg-gray-800">
		<h3 class="font-bold text-lg text-gray-700 dark:text-gray-300 mb-4">{{ 'tag.form.create_title'|trans([], 'messages')|default('Create Tag') }}</h3>

		<form method="dialog">
			<button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 text-gray-400 dark:text-gray-600">✕</button>
		</form>

		<div class="space-y-4">
			<div>
				<label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
					{{ 'tag.form.name'|trans([], 'messages')|default('Tag Name') }}
				</label>
				<input type="text" id="newTagName" class="input border border-gray-300 dark:border-gray-600 rounded-md w-full bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300" data-create-entity-target="input">
			</div>
		</div>

		<div class="modal-action">
			<form method="dialog">
				<button class="btn btn-ghost text-gray-400 dark:text-gray-600">{{ 'tag.form.cancel'|trans([], 'messages')|default('Cancel') }}</button>
