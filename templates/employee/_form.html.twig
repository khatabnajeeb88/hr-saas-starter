			<button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 text-gray-400 dark:text-gray-600">✕</button>
		</form>

		<div class="space-y-4">
			<div>
				<label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
					{{ 'employment_type.form.name'|trans([], 'messages')|default('Employment Type Name') }}
				</label>
				<input type="text" id="newEmploymentTypeName" class="input border border-gray-300 dark:border-gray-600 rounded-md w-full bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300" data-create-entity-target="input">
			</div>
		</div>

		<div class="modal-action">
			<form method="dialog">
				<button class="btn btn-ghost text-gray-400 dark:text-gray-600 hover:text-white dark:hover:text-white">{{ 'employment_type.form.cancel'|trans([], 'messages')|default('Cancel') }}</button>
			</form>
			<button type="button" class="btn bg-purple-600 hover:bg-purple-700 dark:bg-purple-700 dark:hover:bg-purple-800 text-white border-0" id="saveNewEmploymentType" data-action="click->create-entity#create">
				{{ 'employment_type.form.create'|trans([], 'messages')|default('Create') }}
