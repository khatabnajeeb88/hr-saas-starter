{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Create Team{% endblock %}

{% block dashboard_content %}
<div class="">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold mb-6">Create New Team</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Team Name</label>
                <input type="text" id="name" name="name" required placeholder="e.g. Acme Corp"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div class="flex items-center justify-between pt-4">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
                    Create Team
                </button>
                <a href="{{ path('app_team_index') }}" class="text-gray-600 hover:text-gray-900">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
