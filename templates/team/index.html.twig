{% extends 'base.html.twig' %}

{% block title %}My Teams{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">My Teams</h1>
        <a href="{{ path('app_team_new') }}" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
            Create New Team
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for member in teams %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-start mb-4">
                    <h2 class="text-xl font-semibold">{{ member.team.name }}</h2>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full 
                        {% if member.role == 'owner' %}bg-purple-100 text-purple-800
                        {% elseif member.role == 'admin' %}bg-blue-100 text-blue-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ member.role|capitalize }}
                    </span>
                </div>
                
                <div class="space-y-2">
                    <form action="{{ path('app_team_switch', {'id': member.team.id}) }}" method="post">
                        <button type="submit" class="w-full text-center bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded">
                            Switch to Team
                        </button>
                    </form>
                    
                    <a href="{{ path('app_team_members', {'id': member.team.id}) }}" class="block text-center border border-gray-300 hover:bg-gray-50 text-gray-700 font-semibold py-2 px-4 rounded">
                        Manage Members
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-12 bg-gray-50 rounded-lg">
                <p class="text-gray-500 mb-4">You don't belong to any teams yet.</p>
                <a href="{{ path('app_team_new') }}" class="text-indigo-600 hover:text-indigo-800 font-semibold">
                    Create your first team
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
