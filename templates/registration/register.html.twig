{% extends 'layouts/auth.html.twig' %}

{% block title %}{{ 'register.title'|trans|default('Create Account') }}{% endblock %}

{% block auth_title %}{{ 'register.get_started'|trans|default('Get Started') }}{% endblock %}
{% block auth_subtitle %}{{ 'register.subtitle'|trans|default('Create your account to get started') }}{% endblock %}

{% block auth_content %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200">
            <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-sm text-red-800">{{ flash_error }}</p>
            </div>
        </div>
    {% endfor %}

    {% if registrationForm.vars.errors|length > 0 %}
        <div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200">
            <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="text-sm text-red-800">
                    {{ form_errors(registrationForm) }}
                </div>
            </div>
        </div>
    {% endif %}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}
        
        <!-- Email Field -->
        <div>
            {{ form_label(registrationForm.email, null, {
                'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}
            }) }}
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400',
                    'placeholder': 'register.email_placeholder'|trans|default('Enter your email')
                }
            }) }}
            {{ form_errors(registrationForm.email, {
                'attr': {'class': 'text-sm text-red-600 mt-1'}
            }) }}
        </div>

        <!-- Password Field -->
        <div>
            {{ form_label(registrationForm.plainPassword, 'register.password'|trans|default('Password'), {
                'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}
            }) }}
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400',
                    'placeholder': 'register.password_placeholder'|trans|default('Create a strong password')
                }
            }) }}
            {{ form_errors(registrationForm.plainPassword, {
                'attr': {'class': 'text-sm text-red-600 mt-1'}
            }) }}
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-start gap-3">
            <div class="flex items-center h-5">
                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'w-4 h-4 rounded border-slate-300 text-purple-600 focus:ring-2 focus:ring-purple-200'
                    }
                }) }}
            </div>
            <div class="text-sm">
                {{ form_label(registrationForm.agreeTerms, null, {
                    'label_attr': {'class': 'text-slate-700'}
                }) }}
                {{ form_errors(registrationForm.agreeTerms, {
                    'attr': {'class': 'text-sm text-red-600 mt-1 block'}
                }) }}
            </div>
        </div>

        <!-- Submit Button -->
        <button 
            type="submit" 
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
        >
            {{ 'register.create_account'|trans|default('Create Account') }}
        </button>

    {{ form_end(registrationForm) }}
{% endblock %}

{% block auth_footer %}
    <p class="text-sm text-slate-600">
        {{ 'register.have_account'|trans|default('Already have an account?') }}
        <a href="{{ path('app_login') }}" class="text-purple-600 hover:text-purple-700 font-medium">
            {{ 'register.sign_in'|trans|default('Sign in') }}
        </a>
    </p>
{% endblock %}
