{% extends 'layouts/auth.html.twig' %}

{% block title %}
	{{ 'register.title'|trans|default('Create Account') }}
{% endblock %}

{% block auth_title %}
	{{ 'register.get_started'|trans|default('Get Started') }}
{% endblock %}
{% block auth_subtitle %}
	{{ 'register.subtitle'|trans|default('Create your account to get started') }}
{% endblock %}

{% block auth_content %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200">
			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 text-red-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
				</svg>
				<p class="text-sm text-red-800">{{ flash_error }}</p>
			</div>
		</div>
	{% endfor %}

	{% if registrationForm.vars.errors|length > 0 %}
		<div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200">
			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 text-red-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
				</svg>
				<div class="text-sm text-red-800">
					{{ form_errors(registrationForm) }}
				</div>
			</div>
		</div>
	{% endif %}

	{{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}

	<!-- Name Field -->
	<div>
		{{ form_label(registrationForm.name, 'register.full_name'|trans|default('Full Name'), {
                'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}
            }) }}
		{{ form_widget(registrationForm.name, {
                'attr': {
                    'class': 'w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400',
                    'placeholder': 'register.full_name'|trans|default('Full Name')
                }
            }) }}
		{{ form_errors(registrationForm.name, {
                'attr': {'class': 'text-sm text-red-600 mt-1'}
            }) }}
	</div>

	<!-- Email Field -->
	<div>
		{{ form_label(registrationForm.email, 'register.email'|trans|default('Email'), {
                'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}
            }) }}
		{{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400',
                    'placeholder': 'register.email_placeholder'|trans|default('Enter your email')
                }
            }) }}
		{{ form_errors(registrationForm.email, {
                'attr': {'class': 'text-sm text-red-600 mt-1'}
            }) }}
	</div>

	<!-- Password Field -->
	<div>
		{{ form_label(registrationForm.plainPassword, 'register.password'|trans|default('Password'), {
                'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-2'}
            }) }}
		{{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'w-full px-4 py-2.5 rounded-lg border border-slate-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 outline-none transition-all text-slate-900 placeholder-slate-400',
                    'placeholder': 'register.password_placeholder'|trans|default('Create a strong password')
                }
            }) }}
		{{ form_errors(registrationForm.plainPassword, {
                'attr': {'class': 'text-sm text-red-600 mt-1'}
            }) }}
	</div>

	<!-- Terms and Conditions -->
	<div class="flex items-start gap-3">
		<div class="flex items-center h-5">
			{{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'checkbox border-slate-300 text-purple-600 focus:ring-2 focus:ring-purple-200'
                    }
                }) }}
		</div>
		<div class="text-sm">
			{{ form_label(registrationForm.agreeTerms, 'register.agree_terms'|trans|default('I agree to the terms and conditions'), {
                    'label_attr': {'class': 'text-slate-700'}
                }) }}
			{{ form_errors(registrationForm.agreeTerms, {
                    'attr': {'class': 'text-sm text-red-600 mt-1 block'}
                }) }}
		</div>
	</div>

	<!-- Submit Button -->
	<button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">
		{{ 'register.create_account'|trans|default('Create Account') }}
	</button>

	{{ form_end(registrationForm) }}

	<div class="mt-6">
		<div class="relative">
			<div class="absolute inset-0 flex items-center">
				<div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
			</div>
			<div class="relative flex justify-center text-sm">
				<span class="px-2 bg-white dark:bg-slate-800 text-gray-500">{{ 'register.or_continue_with'|trans|default('Or continue with') }}</span>
			</div>
		</div>

		<div class="mt-6 grid grid-cols-2 gap-3">
			{% for provider in social_providers() %}
				{% set providerName = provider.name %}
				{% set routeName = 'connect_' ~ providerName %}
				{% set icon = provider.icon %}
				<!-- Determine col-span logic if needed, simplify for now or use classes based on count -->
				<a href="{{ path(routeName) }}" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 dark:border-gray-600 rounded-md shadow-none bg-white dark:bg-slate-700 text-sm font-medium text-gray-500 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-slate-600 {{ loop.last and loop.length is odd ? 'col-span-2' : '' }}">
					<span class="sr-only">Sign in with
						{{ providerName|capitalize }}</span>
					{% if icon and icon starts with '<svg' %}
						{{ icon|raw }}
					{% elseif providerName == 'google' %}
						<svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 24 24"><path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"/></svg>
					{% elseif providerName == 'github' %}
						<svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20"><path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/></svg>
					{% elseif providerName == 'linkedin' %}
						<svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
					{% endif %}
				</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}

{% block auth_footer %}
	<p class="text-sm text-slate-600">
		{{ 'register.have_account'|trans|default('Already have an account?') }}
		<a href="{{ path('app_login') }}" class="text-purple-600 hover:text-purple-700 font-medium">
			{{ 'register.sign_in'|trans|default('Sign in') }}
		</a>
	</p>
{% endblock %}
