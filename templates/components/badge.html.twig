{# Usage: {% include 'components/badge.html.twig' with {text: 'Active', variant: 'success'} %} #}
{# Variants: success, error, warning, info, default #}

{% set variantClasses = {
    'success': 'bg-green-100 text-green-800',
    'error': 'bg-red-100 text-red-800',
    'warning': 'bg-yellow-100 text-yellow-800',
    'info': 'bg-blue-100 text-blue-800',
    'default': 'bg-gray-100 text-gray-800'
} %}

<span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full {{ variantClasses[variant|default('default')] }}">
    {{ text }}
</span>
