<header class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 sticky top-0 z-20">
    <div class="flex items-center justify-between h-16 px-6">
        <!-- Mobile Toggle -->
        <label for="dashboard-drawer" class="lg:hidden text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 me-4 cursor-pointer">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </label>
        
        <!-- Search -->
        <div class="flex-1 max-w-lg">
            <div class="relative group">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-5 h-5 text-slate-400 group-focus-within:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
                <input type="text" 
                       class="block w-full p-2 ps-10 text-sm text-slate-900 dark:text-slate-100 border border-transparent rounded-lg bg-slate-50 dark:bg-slate-700 focus:bg-white dark:focus:bg-slate-600 focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-slate-400 dark:placeholder-slate-500 transition-all" 
                       placeholder="{{ 'dashboard.search_placeholder'|trans }}">
            </div>
        </div>
        
        <!-- Right Actions -->
        <div class="flex items-center space-s-4 ms-4">
            
            <!-- Language Switcher -->
            <div class="dropdown dropdown-end">
                <div tabindex="0" role="button" class="p-2 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full transition-colors relative">
                     <span class="sr-only">{{ 'dashboard.language_switcher'|trans }}</span>
                     <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                    </svg>
                </div>
                 <ul tabindex="0" class="dropdown-content z-10 menu p-1 shadow-lg bg-white dark:bg-slate-800 rounded-lg border border-slate-100 dark:border-slate-700 w-32 mt-2">
                    <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}" class="px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white {{ app.request.locale == 'en' ? 'font-bold text-purple-600 dark:text-purple-400' : '' }}">English</a></li>
                    <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ar'})) }}" class="px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white {{ app.request.locale == 'ar' ? 'font-bold text-purple-600 dark:text-purple-400' : '' }}">العربية</a></li>
                </ul>
            </div>

            <!-- Theme Toggle -->
            {% include 'components/theme_switcher.html.twig' %}

            <!-- Notifications -->
            <!-- Notifications -->
            <div id="notifications-dropdown" class="dropdown dropdown-end" 
                 data-url-list="{{ path('internal_notifications_list') }}" 
                 data-url-mark-all-read="{{ path('internal_notification_mark_all_read') }}">
                <div tabindex="0" role="button" class="p-2 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full transition-colors relative">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                    <span id="notification-count" style="display: none;" class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
                </div>

                <div tabindex="0" class="dropdown-content z-1 menu p-0 shadow bg-white dark:bg-slate-800 rounded-lg w-80 border border-slate-100 dark:border-slate-700 mt-2">
                    <div class="px-4 py-2 border-b border-slate-100 dark:border-slate-700 flex justify-between items-center">
                        <h3 class="font-semibold text-slate-900 dark:text-slate-100">{{ 'dashboard.notifications'|trans }}</h3>
                        <button type="button" id="mark-all-read" class="text-xs text-slate-500 hover:text-slate-700 font-medium" style="display: none;">{{ 'dashboard.mark_all_read'|trans }}</button>
                    </div>
                    
                    <div id="notification-list" class="max-h-96 overflow-y-auto">
                        <!-- Notifications will be loaded here via JS -->
                        <div class="p-4 text-center text-slate-500 text-sm">{{ 'dashboard.loading'|trans }}</div>
                    </div>
                </div>
            </div>
            
            <!-- Announcement Modal (DaisyUI Dialog) -->
            <dialog id="announcement-modal" class="modal">
                <div class="modal-box p-0 overflow-hidden max-w-lg">
                    <div class="modal-header px-6 py-4 border-b border-slate-100 dark:border-slate-700 flex items-center justify-between">
                        <h3 id="announcement-title" class="font-bold text-lg text-slate-900 dark:text-slate-100"></h3>
                        <form method="dialog">
                            <button class="text-slate-400 hover:text-slate-500 dark:text-slate-500 dark:hover:text-slate-300">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </form>
                    </div>

                    <div class="p-6 prose dark:prose-invert max-w-none">
                        <div id="announcement-content"></div>
                    </div>

                    <div class="px-6 py-4 bg-slate-50 dark:bg-slate-800/50 flex justify-end">
                        <form method="dialog">
                            <button class="px-4 py-2 bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 rounded-lg text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-600 transition-colors">
                                Close
                            </button>
                        </form>
                    </div>
                </div>
                <form method="dialog" class="modal-backdrop">
                    <button>close</button>
                </form>
            </dialog>

            <!-- User Menu -->
            <div class="dropdown dropdown-end ms-2">
                <div tabindex="0" role="button" class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-indigo-100 border border-indigo-200 flex items-center justify-center text-indigo-700 overflow-hidden">
                        {% if app.user.avatar %}
                            <img src="{{ app.user.avatar }}" alt="{{ app.user.name }}" class="w-full h-full object-cover">
                        {% else %}
                            <span class="font-medium text-sm">{{ app.user.name|default(app.user.email)|first|upper }}</span>
                        {% endif %}
                    </div>
                </div>
                
                <ul tabindex="0" class="dropdown-content z-1 menu p-2 shadow bg-white dark:bg-slate-800 rounded-lg w-48 border border-slate-100 dark:border-slate-700 mt-2">
                    <li class="menu-title px-4 py-2 border-b border-slate-100 dark:border-slate-700 mb-2">
                        <span class="text-sm font-semibold text-slate-900 dark:text-slate-100 truncate block p-0">{{ app.user.name|default('User'|trans) }}</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400 truncate block p-0 font-normal opacity-70">{{ app.user.email }}</span>
                    </li>
                    <li>
                        <a href="{{ path('invoice_list') }}" class="text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                            {{ 'menu.invoices'|trans }}
                        </a>
                    </li>
                     <li>
                        <a href="{{ path('app_profile_edit') }}" class="text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                            {{ 'menu.settings'|trans }}
                        </a>
                    </li>
                    <div class="divider my-1"></div>
                    <li>
                        <a href="{{ path('app_logout') }}" class="text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                            {{ 'menu.logout'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
