<header class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 sticky top-0 z-20">
    <div class="flex items-center justify-between h-16 px-6">
        <!-- Mobile Toggle -->
        <button class="lg:hidden text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 me-4" @click="sidebarOpen = !sidebarOpen">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
        
        <!-- Search -->
        <div class="flex-1 max-w-lg">
            <div class="relative group">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-5 h-5 text-slate-400 group-focus-within:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
                <input type="text" 
                       class="block w-full p-2 ps-10 text-sm text-slate-900 dark:text-slate-100 border border-transparent rounded-lg bg-slate-50 dark:bg-slate-700 focus:bg-white dark:focus:bg-slate-600 focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-slate-400 dark:placeholder-slate-500 transition-all" 
                       placeholder="{{ 'dashboard.search_placeholder'|trans }}">
            </div>
        </div>
        
        <!-- Right Actions -->
        <div class="flex items-center space-s-4 ms-4">
            
            <!-- Language Switcher -->
            <div class="relative" x-data="{ open: false }">
                <button @click="open = !open" class="p-2 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full transition-colors relative">
                     <span class="sr-only">{{ 'dashboard.language_switcher'|trans }}</span>
                     <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                    </svg>
                </button>
                 <div x-show="open" @click.away="open = false" x-transition.origin.top.right class="absolute end-0 mt-2 w-32 bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-slate-100 dark:border-slate-700 py-1 z-50">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}" class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white {{ app.request.locale == 'en' ? 'font-bold text-purple-600 dark:text-purple-400' : '' }}">English</a>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ar'})) }}" class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white {{ app.request.locale == 'ar' ? 'font-bold text-purple-600 dark:text-purple-400' : '' }}">العربية</a>
                </div>
            </div>

            <!-- Theme Toggle -->
            {% include 'components/theme_switcher.html.twig' %}

            <!-- Notifications -->
            <div class="relative" x-data="{ 
                open: false,
                notifications: [],
                loading: false,
                hasUnread: false,
                selectedAnnouncement: null,
                urlList: '{{ path('internal_notifications_list') }}',
                urlMarkAllRead: '{{ path('internal_notification_mark_all_read') }}',
                async fetchNotifications() {
                    this.loading = true;
                    try {
                        const response = await fetch(this.urlList);
                        this.notifications = await response.json();
                        this.hasUnread = this.notifications.some(n => !n.isRead);
                    } catch (error) {
                        console.error('Error fetching notifications:', error);
                    } finally {
                        this.loading = false;
                    }
                },
                async markAsRead(id) {
                     try {
                        // Optimistic update
                        const notification = this.notifications.find(n => n.id === id);
                        if (notification) notification.isRead = true;
                        this.hasUnread = this.notifications.some(n => !n.isRead);

                        // Calculate the correct URL
                        const url = this.urlList + '/' + id + '/read';

                        await fetch(url, { method: 'POST' });
                    } catch (error) {
                        console.error('Error marking as read:', error);
                    }
                },
                async markAllAsRead() {
                    try {
                        // Optimistic update
                        this.notifications.forEach(n => n.isRead = true);
                        this.hasUnread = false;

                        await fetch(this.urlMarkAllRead, { method: 'POST' });
                    } catch (error) {
                        console.error('Error marking all as read:', error);
                    }
                },
                handleNotificationClick(notification) {
                    // Always mark as read
                    if (!notification.isRead) {
                        this.markAsRead(notification.id);
                    }

                    // If it is an announcement, open modal
                    if (notification.data.is_announcement) {
                        this.selectedAnnouncement = notification;
                        this.open = false; // Close dropdown
                    }
                },
                toggle() {
                    this.open = !this.open;
                    if (this.open) {
                        this.fetchNotifications();
                    }
                }
            }" @click.away="open = false">
                <button type="button" @click="toggle()" class="p-2 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full transition-colors relative">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                    <span x-show="hasUnread" class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
                </button>

                <div x-show="open" style="min-width: 300px;" x-transition.origin.top.right class="absolute end-0 mt-2 min-w-80 w-80 bg-white dark:bg-slate-800 rounded-lg shadow-xl border border-slate-100 dark:border-slate-700 py-2 z-50">
                    <div class="px-4 py-2 border-b border-slate-100 dark:border-slate-700 flex justify-between items-center">
                        <h3 class="font-semibold text-slate-900 dark:text-slate-100">{{ 'dashboard.notifications'|trans }}</h3>
                        <div class="flex gap-2">
                             <button type="button" @click.stop="markAllAsRead()" class="text-xs text-slate-500 hover:text-slate-700 font-medium" x-show="hasUnread">{{ 'dashboard.mark_all_read'|trans }}</button>
                        </div>
                    </div>
                    
                    <div class="max-h-96 overflow-y-auto">
                        <template x-if="loading">
                             <div class="p-4 text-center text-slate-500 text-sm">{{ 'dashboard.loading'|trans }}</div>
                        </template>

                        <template x-if="!loading && notifications.length === 0">
                            <div class="p-4 text-center text-slate-500 text-sm">{{ 'dashboard.no_new_notifications'|trans }}</div>
                        </template>

                        <template x-for="notification in notifications" :key="notification.id">
                            <div class="px-4 py-3 hover:bg-slate-50 dark:hover:bg-slate-750 border-b border-slate-50 dark:border-slate-700/50 last:border-0 transition-colors group cursor-pointer" :class="{'bg-slate-50 dark:bg-slate-800/50': !notification.isRead}" @click="handleNotificationClick(notification)">
                                <div class="flex items-start gap-3">
                                    <div class="shrink-0 mt-1">
                                         <div class="w-2 h-2 rounded-full" :class="notification.isRead ? 'bg-slate-300 dark:bg-slate-600' : 'bg-blue-500'"></div>
                                    </div>
                                    <div class="flex-1">
                                        <p class="text-sm text-slate-800 dark:text-slate-200" :class="{'font-semibold': !notification.isRead}" x-text="notification.data.message"></p>
                                        <div class="flex justify-between items-center mt-1">
                                            <p class="text-xs text-slate-500" x-text="new Date(notification.createdAt).toLocaleString()"></p>
                                            <button @click.stop="markAsRead(notification.id)" x-show="!notification.isRead" class="text-xs text-blue-600 hover:text-blue-800 opacity-0 group-hover:opacity-100 transition-opacity">Mark read</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Announcement Modal -->
                <div x-show="selectedAnnouncement" 
                     style="display: none"
                     class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm"
                     x-transition.opacity>
                    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-2xl max-w-lg w-full mx-4 overflow-hidden" 
                         @click.away="selectedAnnouncement = null"
                         x-transition.scale>
                        
                        <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700 flex items-center justify-between" :class="{
                            'bg-blue-50 dark:bg-blue-900/20': selectedAnnouncement?.type === 'info',
                            'bg-amber-50 dark:bg-amber-900/20': selectedAnnouncement?.type === 'warning',
                            'bg-red-50 dark:bg-red-900/20': selectedAnnouncement?.type === 'danger',
                            'bg-emerald-50 dark:bg-emerald-900/20': selectedAnnouncement?.type === 'success'
                        }">
                            <h3 class="font-bold text-lg text-slate-900 dark:text-slate-100" x-text="selectedAnnouncement?.data?.message"></h3>
                            <button @click="selectedAnnouncement = null" class="text-slate-400 hover:text-slate-500 dark:text-slate-500 dark:hover:text-slate-300">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </div>

                        <div class="p-6 prose dark:prose-invert max-w-none">
                            <div x-html="selectedAnnouncement?.data?.description"></div>
                        </div>

                        <div class="px-6 py-4 bg-slate-50 dark:bg-slate-800/50 flex justify-end">
                            <button @click="selectedAnnouncement = null" class="px-4 py-2 bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 rounded-lg text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-600 transition-colors">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Menu -->
            <div class="relative ms-2" x-data="{ open: false }">
                <button @click="open = !open" class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-indigo-100 border border-indigo-200 flex items-center justify-center text-indigo-700 overflow-hidden">
                        {% if app.user.avatar %}
                            <img src="{{ app.user.avatar }}" alt="{{ app.user.name }}" class="w-full h-full object-cover">
                        {% else %}
                            <span class="font-medium text-sm">{{ app.user.name|default(app.user.email)|first|upper }}</span>
                        {% endif %}
                    </div>
                </button>
                
                <div x-show="open" @click.away="open = false" x-transition.origin.top.right class="absolute end-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-xl border border-slate-100 dark:border-slate-700 py-1 z-50">
                    <div class="px-4 py-2 border-b border-slate-100 dark:border-slate-700">
                        <p class="text-sm font-semibold text-slate-900 dark:text-slate-100 truncate">{{ app.user.name|default('User'|trans) }}</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400 truncate">{{ app.user.email }}</p>
                    </div>
                    <a href="{{ path('invoice_list') }}" class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                        {{ 'menu.invoices'|trans }}
                    </a>
                     <a href="{{ path('app_profile_edit') }}" class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                        {{ 'menu.settings'|trans }}
                    </a>
                    <div class="border-t border-slate-100 dark:border-slate-700 my-1"></div>
                    <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-purple-50 dark:hover:bg-slate-700 hover:text-purple-600 dark:hover:text-white">
                        {{ 'menu.logout'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
