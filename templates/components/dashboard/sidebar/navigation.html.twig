{# Sidebar Navigation Component #}
{# Parameters: currentRoute (string) #}

<nav class="flex-1 overflow-y-auto py-4 px-3">
    {# Dashboard Dropdown #}
    <div class="mb-1">
        <button @click="dashboardDropdown = !dashboardDropdown" class="w-full flex items-center justify-between px-3 py-2 text-sm font-medium rounded-lg transition-colors text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800">
            <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                <span>{{ 'menu.dashboard'|trans }}</span>
            </div>
            <svg class="w-4 h-4 transition-transform" :class="{'rotate-180': dashboardDropdown}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
        </button>
        
        <div x-show="dashboardDropdown" x-collapse class="mt-1 ms-8 space-y-1">
            <a href="{{ path('app_dashboard') }}" class="block px-3 py-2 text-sm rounded-lg {% if currentRoute == 'app_dashboard' %}bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 font-medium{% else %}text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800{% endif %}">
                {{ 'menu.default'|trans }}
            </a>
            <a href="#" class="flex items-center justify-between px-3 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg">
                <span>{{ 'menu.analytics'|trans }}</span>
                <span class="text-xs bg-purple-100 text-purple-600 px-2 py-0.5 rounded">Pro</span>
            </a>
            <a href="#" class="flex items-center justify-between px-3 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg">
                <span>{{ 'menu.ecommerce'|trans }}</span>
                <span class="text-xs bg-purple-100 text-purple-600 px-2 py-0.5 rounded">Pro</span>
            </a>
        </div>
    </div>

    {# APPLICATIONS Section #}
    <div class="text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2 px-3 mt-6">{{ 'menu.applications'|trans }}</div>
    


    <a href="{{ path('subscription_current') }}" class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group mb-1 {% if currentRoute starts with 'subscription' %}bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400{% else %}text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-slate-200{% endif %}">
        <svg class="w-5 h-5 me-3 {% if currentRoute starts with 'subscription' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
        </svg>
        {{ 'menu.subscription'|trans }}
    </a>
</nav>
