{% extends 'layouts/portal.html.twig' %}

{% block portal_content %}
	<div class="flex items-center justify-between mb-8">
		<div>
			<h2 class="text-2xl font-bold text-slate-800 dark:text-slate-100">My Profile</h2>
			<p class="text-slate-500 dark:text-slate-400">Manage your personal information</p>
		</div>
		<a href="{{ path('app_employee_portal_profile_edit') }}" class="inline-flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-xl transition-colors font-medium">
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
			</svg>
			Edit Profile
		</a>
	</div>

	<div
		class="grid grid-cols-1 lg:grid-cols-3 gap-8">
		{# Left Column: Quick Info #}
		<div class="space-y-6">
			<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6 flex flex-col items-center text-center">
				<div class="w-24 h-24 rounded-full overflow-hidden mb-4 ring-4 ring-purple-50 dark:ring-purple-900/20">
					<img src="{{ employee.profileImage ? asset('uploads/photos/' ~ employee.profileImage) : 'https://ui-avatars.com/api/?name=' ~ employee.fullName|url_encode }}" alt="Profile" class="w-full h-full object-cover"/>
				</div>
				<h3 class="text-xl font-bold text-slate-800 dark:text-slate-100">{{ employee.fullName }}</h3>
				<p class="text-slate-500 dark:text-slate-400">{{ employee.jobTitle }}</p>
				<div class="mt-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
					{{ employee.employmentStatus|capitalize }}
				</div>
			</div>

			<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
				<h4 class="font-bold text-slate-800 dark:text-slate-100 mb-4">Employment Details</h4>
				<div class="space-y-4 text-sm">
					<div class="flex justify-between py-2 border-b border-slate-100 dark:border-slate-700 last:border-0">
						<span class="text-slate-500">Employee ID</span>
						<span class="font-medium text-slate-800 dark:text-slate-100">{{ employee.badgeId|default('#') }}</span>
					</div>
					<div class="flex justify-between py-2 border-b border-slate-100 dark:border-slate-700 last:border-0">
						<span class="text-slate-500">Department</span>
						<span class="font-medium text-slate-800 dark:text-slate-100">{{ employee.department.name|default('-') }}</span>
					</div>
					<div class="flex justify-between py-2 border-b border-slate-100 dark:border-slate-700 last:border-0">
						<span class="text-slate-500">Manager</span>
						<span class="font-medium text-slate-800 dark:text-slate-100">{{ employee.manager.fullName|default('-') }}</span>
					</div>
					<div class="flex justify-between py-2 border-b border-slate-100 dark:border-slate-700 last:border-0">
						<span class="text-slate-500">Joined Date</span>
						<span class="font-medium text-slate-800 dark:text-slate-100">{{ employee.joiningDate ? employee.joiningDate|date('M d, Y') : '-' }}</span>
					</div>
				</div>
			</div>
		</div>

		{# Right Column: Tabbed Info #}
		<div
			class="lg:col-span-2 space-y-6">
			{# Personal Information #}
			<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
				<h4 class="font-bold text-slate-800 dark:text-slate-100 mb-4 flex items-center gap-2">
					<svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
					Personal Information
				</h4>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Email Address</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.email }}</p>
					</div>
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Phone Number</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.mobile|default('-') }}</p>
					</div>
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Date of Birth</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.dateOfBirth ? employee.dateOfBirth|date('M d, Y') : '-' }}</p>
					</div>
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Gender</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.gender|default('-') }}</p>
					</div>
					<div class="md:col-span-2">
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Address</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.address|default('-') }}</p>
					</div>
				</div>
			</div>

			{# Bank Information #}
			<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
				<h4 class="font-bold text-slate-800 dark:text-slate-100 mb-4 flex items-center gap-2">
					<svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
					</svg>
					Bank Details
				</h4>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Bank Name</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.bankName|default('-') }}</p>
					</div>
					<div>
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">Account Number</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium">{{ employee.bankAccountNumber ? '•••• ' ~ employee.bankAccountNumber|slice(-4) : '-' }}</p>
					</div>
					<div class="md:col-span-2">
						<label class="block text-xs text-slate-500 dark:text-slate-400 mb-1">IBAN</label>
						<p class="text-slate-800 dark:text-slate-100 font-medium font-mono">{{ employee.iban|default('-') }}</p>
					</div>
				</div>
			</div>

			{# Family Information #}
			<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
				<h4 class="font-bold text-slate-800 dark:text-slate-100 mb-4 flex items-center gap-2">
					<svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
					</svg>
					Dependents
				</h4>
				{% if employee.familyMembers|length > 0 %}
					{# Desktop Table #}
					<div class="hidden md:block overflow-x-auto">
						<table class="w-full text-sm text-left">
							<thead class="text-xs text-slate-500 uppercase bg-slate-50 dark:bg-slate-700/50">
								<tr>
									<th class="px-4 py-2">Name</th>
									<th class="px-4 py-2">Relation</th>
									<th class="px-4 py-2">Date of Birth</th>
								</tr>
							</thead>
							<tbody>
								{% for member in employee.familyMembers %}
									<tr class="border-b border-slate-100 dark:border-slate-700 last:border-0">
										<td class="px-4 py-3 font-medium text-slate-800 dark:text-slate-100">{{ member.name }}</td>
										<td class="px-4 py-3 text-slate-500">{{ member.relationship }}</td>
										<td class="px-4 py-3 text-slate-500">{{ member.dateOfBirth ? member.dateOfBirth|date('M d, Y') : '-' }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

					{# Mobile Cards #}
					<div class="md:hidden space-y-3">
						{% for member in employee.familyMembers %}
							<div class="bg-slate-50 dark:bg-slate-700/30 p-4 rounded-xl border border-slate-100 dark:border-slate-700">
								<h5 class="font-bold text-slate-800 dark:text-slate-100">{{ member.name }}</h5>
								<div class="mt-2 grid grid-cols-2 gap-2 text-sm">
									<div>
										<span class="block text-xs text-slate-500 uppercase tracking-wide">Relation</span>
										<span class="font-medium dark:text-slate-300">{{ member.relationship }}</span>
									</div>
									<div>
										<span class="block text-xs text-slate-500 uppercase tracking-wide">Birthday</span>
										<span class="font-medium dark:text-slate-300">{{ member.dateOfBirth ? member.dateOfBirth|date('M d, Y') : '-' }}</span>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<p class="text-sm text-slate-500 italic">No dependents information added.</p>
				{% endif %}
			</div>

		</div>
	</div>
{% endblock %}
