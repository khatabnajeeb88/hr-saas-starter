{% extends 'layouts/dashboard.html.twig' %}

{% block title %}{{ 'profile.change_password.title'|trans }}{% endblock %}

{% block dashboard_content %}
<div class="">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold mb-6">{{ 'profile.change_password.title'|trans }}</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message|trans }}
            </div>
        {% endfor %}

        <form method="post" class="space-y-4">
            <div>
                <label for="current_password" class="block text-sm font-medium text-gray-700">{{ 'profile.change_password.current'|trans }}</label>
                <input type="password" id="current_password" name="current_password" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-none focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div>
                <label for="new_password" class="block text-sm font-medium text-gray-700">{{ 'profile.change_password.new'|trans }}</label>
                <input type="password" id="new_password" name="new_password" required minlength="6"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-none focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div>
                <label for="confirm_password" class="block text-sm font-medium text-gray-700">{{ 'profile.change_password.confirm'|trans }}</label>
                <input type="password" id="confirm_password" name="confirm_password" required minlength="6"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-none focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div class="flex items-center justify-between pt-4">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
                    {{ 'profile.change_password.submit_btn'|trans }}
                </button>
                <a href="{{ path('app_profile_edit') }}" class="text-gray-600 hover:text-gray-900">
                    {{ 'profile.change_password.back'|trans }}
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
