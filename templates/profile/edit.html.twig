{% extends 'layouts/dashboard.html.twig' %}

{% block title %}{{ 'profile.edit.title'|trans }}{% endblock %}

{% block dashboard_content %}
<div class="">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold mb-6">{{ 'profile.edit.title'|trans }}</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message|trans }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message|trans }}
            </div>
        {% endfor %}

        <form method="post" class="space-y-4">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">{{ 'profile.edit.email'|trans }}</label>
                <input type="email" id="email" name="email" value="{{ user.email }}" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">{{ 'profile.edit.name'|trans }}</label>
                <input type="text" id="name" name="name" value="{{ user.name }}"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2 border">
            </div>

            <div class="flex items-center justify-between pt-4">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
                    {{ 'profile.edit.save_btn'|trans }}
                </button>
                <a href="{{ path('app_profile_change_password') }}" class="text-indigo-600 hover:text-indigo-900">
                    {{ 'profile.edit.change_password_link'|trans }}
                </a>
            </div>
        </form>
    </div>

    <!-- Two-Factor Authentication Section -->
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6 mt-6">
        <h2 class="text-xl font-bold mb-4">{{ 'profile.2fa.title'|trans }}</h2>
        
        {% if app.user.totpAuthenticationEnabled %}
            <div class="flex items-start justify-between">
                <div>
                    <div class="flex items-center mb-2">
                        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span class="font-medium text-green-700">{{ 'profile.2fa.enabled'|trans }}</span>
                    </div>
                    <p class="text-sm text-gray-600">{{ 'profile.2fa.enabled_msg'|trans }}</p>
                </div>
                <form action="{{ path('app_2fa_disable') }}" method="post" onsubmit="return confirm('{{ 'profile.2fa.disable_confirm'|trans }}');">
                    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm">
                        {{ 'profile.2fa.disable_btn'|trans }}
                    </button>
                </form>
            </div>
        {% else %}
            <div class="flex items-start justify-between">
                <div>
                    <div class="flex items-center mb-2">
                        <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        <span class="font-medium text-gray-700">{{ 'profile.2fa.not_enabled'|trans }}</span>
                    </div>
                    <p class="text-sm text-gray-600">{{ 'profile.2fa.not_enabled_msg'|trans }}</p>
                </div>
                <a href="{{ path('app_2fa_setup') }}" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">
                    {{ 'profile.2fa.enable_btn'|trans }}
                </a>
            </div>
        {% endif %}
    </div>

    <!-- API Tokens Section -->
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6 mt-6"
         x-data="{
            tokens: [],
            loading: false,
            showCreateModal: false,
            showSuccessModal: false,
            newToken: null,
            form: { description: '' },
            
            async init() {
                this.loading = true;
                this.tokens = await (await fetch('{{ path('app_profile_api_tokens_list') }}')).json();
                this.loading = false;
            },
            
            async createToken() {
                if (!this.form.description) return;
                
                const response = await fetch('{{ path('app_profile_api_tokens_create') }}', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(this.form)
                });
                
                if (response.ok) {
                    const data = await response.json();
                    this.tokens.push(data);
                    this.newToken = data.token;
                    this.showCreateModal = false;
                    this.showSuccessModal = true;
                    this.form.description = '';
                }
            },
            
            async revokeToken(id) {
                if (!confirm('{{ 'api_tokens.delete_confirm'|trans }}')) return;
                
                await fetch(`/profile/api-tokens/${id}`, { method: 'DELETE' });
                this.tokens = this.tokens.filter(t => t.id !== id);
            },
            
            copyToken() {
                navigator.clipboard.writeText(this.newToken);
            }
         }"
    >
        <div class="flex items-center justify-between mb-4">
            <div>
                <h2 class="text-xl font-bold">{{ 'api_tokens.title'|trans }}</h2>
                <p class="text-sm text-gray-600">{{ 'api_tokens.description'|trans }}</p>
            </div>
            <button @click="showCreateModal = true" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">
                {{ 'api_tokens.create_btn'|trans }}
            </button>
        </div>

        <div x-show="loading" class="text-center py-4 text-gray-500">
            {{ 'dashboard.loading'|trans }}
        </div>

        <div x-show="!loading && tokens.length === 0" class="text-center py-6 text-gray-500 bg-gray-50 rounded border border-dashed border-gray-300">
            {{ 'api_tokens.empty'|trans }}
        </div>

        <div x-show="!loading && tokens.length > 0" class="space-y-4">
            <template x-for="token in tokens" :key="token.id">
                <div class="flex items-center justify-between p-4 border rounded hover:bg-gray-50">
                    <div>
                        <div class="font-medium" x-text="token.description"></div>
                        <div class="text-xs text-gray-500 font-mono mt-1">
                            <span class="bg-gray-100 px-1 rounded" x-text="token.maskedToken"></span>
                        </div>
                        <div class="text-xs text-gray-400 mt-1">
                            {{ 'api_tokens.created'|trans }}: <span x-text="new Date(token.createdAt).toLocaleDateString()"></span>
                            <span x-show="token.lastUsedAt">
                                â€¢ {{ 'api_tokens.last_used'|trans }}: <span x-text="new Date(token.lastUsedAt).toLocaleDateString()"></span>
                            </span>
                        </div>
                    </div>
                    <button @click="revokeToken(token.id)" class="text-red-600 hover:text-red-900 text-sm px-3 py-1 border border-red-200 rounded hover:bg-red-50">
                        {{ 'api_tokens.delete'|trans }}
                    </button>
                </div>
            </template>
        </div>

        <!-- Create Token Modal -->
        <div x-show="showCreateModal" style="display: none; background-color: rgba(17, 24, 39, 0.75);" class="fixed inset-0 top-0 left-0 w-full h-full flex items-center justify-center z-[9999]">
            <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4" @click.away="showCreateModal = false">
                <h3 class="text-lg font-bold mb-4">{{ 'api_tokens.create_btn'|trans }}</h3>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">{{ 'api_tokens.name_label'|trans }}</label>
                    <input type="text" x-model="form.description" class="w-full border rounded p-2" placeholder="{{ 'api_tokens.name_placeholder'|trans }}">
                </div>
                <div class="flex justify-end space-x-2">
                    <button @click="showCreateModal = false" class="px-4 py-2 text-gray-600 hover:text-gray-800">
                        {{ 'common.cancel'|trans }}
                    </button>
                    <button @click="createToken()" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
                        {{ 'common.save'|trans }}
                    </button>
                </div>
            </div>
        </div>

        <div x-show="showSuccessModal" style="display: none; background-color: rgba(17, 24, 39, 0.75);" class="fixed inset-0 top-0 left-0 w-full h-full flex items-center justify-center z-[9999]"
             x-data="{ copied: false }">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 overflow-hidden relative" @click.away="showSuccessModal = false">
                <button @click="showSuccessModal = false" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                </button>

                <div class="p-6 text-center">
                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-fchange_password_linkull bg-green-100 mb-4">
                        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>
                    
                    <h3 class="text-lg font-bold text-gray-900 mb-2">{{ 'api_tokens.new_token_title'|trans }}</h3>
                    <p class="text-sm text-gray-500 mb-6">{{ 'api_tokens.new_token_msg'|trans }}</p>
                    
                    <div class="relative mb-6">
                        <div class="bg-slate-100 p-4 rounded-lg border border-slate-200 font-mono text-sm break-all text-slate-600 select-all overflow-auto" x-text="newToken"></div>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-3 justify-center">
                        <button @click="
                                navigator.clipboard.writeText(newToken);
                                copied = true;
                                setTimeout(() => copied = false, 2000);
                            " 
                            class="flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white transition-all duration-200 w-full sm:w-auto"
                            :class="copied ? 'bg-green-600 hover:bg-green-700' : 'bg-indigo-600 hover:bg-indigo-700'"
                        >
                            <svg x-show="!copied" class="mr-2 -ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                            <svg x-show="copied" style="display: none;" class="mr-2 -ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            <span x-text="copied ? '{{ 'api_tokens.copied'|trans }}' : '{{ 'api_tokens.copy'|trans }}'"></span>
                        </button>
                        
                        <button @click="showSuccessModal = false" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none w-full sm:w-auto">
                            {{ 'api_tokens.close'|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
