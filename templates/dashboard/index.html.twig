{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block dashboard_content %}
<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-1">Welcome back, {{ app.user.name|default(app.user.email) }}</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Subscription Status -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Subscription</p>
                {% if activeSubscription %}
                    <p class="text-2xl font-bold text-gray-900 mt-2">{{ activeSubscription.plan.name }}</p>
                    <p class="text-sm text-gray-500 mt-1">
                        {% include 'components/badge.html.twig' with {
                            text: activeSubscription.status|capitalize,
                            variant: activeSubscription.status == 'active' ? 'success' : 'info'
                        } %}
                    </p>
                {% else %}
                    <p class="text-2xl font-bold text-gray-900 mt-2">No Plan</p>
                    <a href="{{ path('subscription_plans') }}" class="text-sm text-indigo-600 hover:text-indigo-800 mt-1 inline-block">View Plans →</a>
                {% endif %}
            </div>
            <div class="p-3 bg-indigo-100 rounded-full">
                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <!-- Teams -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Teams</p>
                <p class="text-2xl font-bold text-gray-900 mt-2">{{ teams|length }}</p>
                <a href="{{ path('app_team_index') }}" class="text-sm text-indigo-600 hover:text-indigo-800 mt-1 inline-block">Manage Teams →</a>
            </div>
            <div class="p-3 bg-green-100 rounded-full">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <!-- Invoices -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Invoices</p>
                <p class="text-2xl font-bold text-gray-900 mt-2">{{ recentInvoices|length }}</p>
                <a href="{{ path('invoice_list') }}" class="text-sm text-indigo-600 hover:text-indigo-800 mt-1 inline-block">View All →</a>
            </div>
            <div class="p-3 bg-purple-100 rounded-full">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Two Column Layout -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Invoices -->
    <div class="bg-white rounded-lg shadow-md">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Recent Invoices</h2>
        </div>
        <div class="p-6">
            {% if recentInvoices is empty %}
                <div class="text-center py-8">
                    <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <p class="text-gray-500 text-sm">No invoices yet</p>
                </div>
            {% else %}
                <div class="space-y-4">
                    {% for invoice in recentInvoices %}
                        <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
                            <div>
                                <p class="font-medium text-gray-900">#{{ invoice.invoiceNumber }}</p>
                                <p class="text-sm text-gray-500">{{ invoice.issuedAt|date('M d, Y') }}</p>
                            </div>
                            <div class="text-right">
                                <p class="font-semibold text-gray-900">{{ invoice.formattedTotal }}</p>
                                {% include 'components/badge.html.twig' with {
                                    text: invoice.status|capitalize,
                                    variant: invoice.status == 'paid' ? 'success' : 'info'
                                } %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Quick Actions & Teams -->
    <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
            <div class="space-y-3">
                <a href="{{ path('app_team_new') }}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="p-2 bg-indigo-100 rounded-lg mr-3">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <span class="font-medium text-gray-700">Create New Team</span>
                </a>
                
                {% if activeSubscription %}
                <a href="{{ path('payment_method_index') }}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="p-2 bg-green-100 rounded-lg mr-3">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                        </svg>
                    </div>
                    <span class="font-medium text-gray-700">Update Payment Method</span>
                </a>
                {% else %}
                <a href="{{ path('subscription_plans') }}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="p-2 bg-purple-100 rounded-lg mr-3">
                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <span class="font-medium text-gray-700">Choose a Plan</span>
                </a>
                {% endif %}
                
                <a href="{{ path('invoice_list') }}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="p-2 bg-blue-100 rounded-lg mr-3">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                    <span class="font-medium text-gray-700">View All Invoices</span>
                </a>
            </div>
        </div>

        <!-- Teams List -->
        {% if teams is not empty %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Your Teams</h2>
            <div class="space-y-3">
                {% for team in teams %}
                    <div class="flex items-center justify-between p-3 rounded-lg bg-gray-50">
                        <div>
                            <p class="font-medium text-gray-900">{{ team.name }}</p>
                            <p class="text-sm text-gray-500">{{ team.memberCount }} member{{ team.memberCount != 1 ? 's' : '' }}</p>
                        </div>
                        {% include 'components/badge.html.twig' with {
                            text: team.role|capitalize,
                            variant: team.role == 'owner' ? 'success' : 'default'
                        } %}
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
