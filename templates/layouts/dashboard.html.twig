{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-slate-50 font-sans text-slate-600" dir="{{ app.request.locale == 'ar' ? 'rtl' : 'ltr' }}" x-data="{ sidebarOpen: false }">
    <!-- Sidebar -->
    <div class="fixed inset-y-0 start-0 w-64 bg-white border-e border-slate-200 transform transition-transform duration-200 ease-in-out lg:translate-x-0 z-40 flex flex-col" 
         :class="{'translate-x-0': sidebarOpen, '{{ app.request.locale == 'ar' ? 'translate-x-full' : '-translate-x-full' }}': !sidebarOpen}"
         id="sidebar">
        
        <!-- Logo -->
        <div class="h-16 flex items-center px-6 border-b border-slate-100">
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-lg bg-purple-600 flex items-center justify-center text-white font-bold">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                </div>
                <span class="text-lg font-bold text-slate-800">FlyonUI</span>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4 px-3 space-y-1">
            <div class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2 px-3 mt-2">Pages</div>
            
            <a href="{{ path('app_dashboard') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group
               {% if app.request.attributes.get('_route') == 'app_dashboard' %}
                   bg-purple-50 text-purple-600
               {% else %}
                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
               {% endif %}">
                <svg class="w-5 h-5 me-3 {% if app.request.attributes.get('_route') == 'app_dashboard' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                </svg>
                {{ 'menu.dashboard'|trans }}
                {% if app.request.attributes.get('_route') == 'app_dashboard' %}
                    <span class="ms-auto bg-purple-600 text-white py-0.5 px-2 rounded-full text-xs">5</span>
                {% endif %}
            </a>

            <div class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2 px-3 mt-6">Applications</div>

            <a href="{{ path('app_team_index') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group
               {% if app.request.attributes.get('_route') starts with 'app_team' %}
                   bg-purple-50 text-purple-600
               {% else %}
                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
               {% endif %}">
                <svg class="w-5 h-5 me-3 {% if app.request.attributes.get('_route') starts with 'app_team' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                {{ 'menu.teams'|trans }}
            </a>

            <a href="{{ path('subscription_current') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group
               {% if app.request.attributes.get('_route') starts with 'subscription' %}
                   bg-purple-50 text-purple-600
               {% else %}
                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
               {% endif %}">
                <svg class="w-5 h-5 me-3 {% if app.request.attributes.get('_route') starts with 'subscription' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
                {{ 'menu.subscription'|trans }}
            </a>

             <a href="{{ path('invoice_list') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group
               {% if app.request.attributes.get('_route') starts with 'invoice' %}
                   bg-purple-50 text-purple-600
               {% else %}
                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
               {% endif %}">
                <svg class="w-5 h-5 me-3 {% if app.request.attributes.get('_route') starts with 'invoice' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                {{ 'menu.invoices'|trans }}
            </a>
            
            <div class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2 px-3 mt-6">Settings</div>

            <a href="{{ path('app_profile_edit') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group
               {% if app.request.attributes.get('_route') starts with 'app_profile' %}
                   bg-purple-50 text-purple-600
               {% else %}
                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
               {% endif %}">
                <svg class="w-5 h-5 me-3 {% if app.request.attributes.get('_route') starts with 'app_profile' %}text-purple-600{% else %}text-slate-400 group-hover:text-slate-500{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                {{ 'menu.profile'|trans }}
            </a>
            
             <a href="{{ path('app_logout') }}" 
               class="flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors group text-slate-600 hover:bg-slate-50 hover:text-slate-900">
                <svg class="w-5 h-5 me-3 text-slate-400 group-hover:text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                {{ 'menu.logout'|trans }}
            </a>
        </nav>
        
        <!-- User Profile Snippet (Bottom Sidebar) -->
        <div class="border-t border-slate-100 p-4">
            <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-full bg-slate-200 flex items-center justify-center text-slate-500">
                    <span class="font-bold text-sm">{{ app.user.email|first|upper }}</span>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-900 truncate">{{ app.user.name|default('User') }}</p>
                    <p class="text-xs text-slate-500 truncate">{{ app.user.email }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Mobile Overlay -->
    <div x-show="sidebarOpen" @click="sidebarOpen = false" x-transition.opacity class="fixed inset-0 bg-slate-900/50 z-30 lg:hidden"></div>

    <!-- Main Content -->
    <div class="lg:ms-64 transition-all duration-200 min-h-screen flex flex-col">
        <!-- Top Navigation -->
        <header class="bg-white border-b border-slate-200 sticky top-0 z-20">
            <div class="flex items-center justify-between h-16 px-6">
                <!-- Mobile Toggle -->
                <button class="lg:hidden text-slate-500 hover:text-slate-700 me-4" @click="sidebarOpen = !sidebarOpen">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
                
                <!-- Search -->
                <div class="flex-1 max-w-lg">
                    <div class="relative group">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <svg class="w-5 h-5 text-slate-400 group-focus-within:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </div>
                        <input type="text" 
                               class="block w-full p-2 ps-10 text-sm text-slate-900 border border-transparent rounded-lg bg-slate-50 focus:bg-white focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-slate-400 transition-all" 
                               placeholder="Type to Search...">
                    </div>
                </div>
                
                <!-- Right Actions -->
                <div class="flex items-center space-s-4 ms-4">
                    
                    <!-- Language Switcher -->
                    <div class="relative" x-data="{ open: false }">
                        <button @click="open = !open" class="p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-full transition-colors relative">
                             <span class="sr-only">Language</span>
                             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                            </svg>
                        </button>
                         <div x-show="open" @click.away="open = false" x-transition.origin.top.right class="absolute end-0 mt-2 w-32 bg-white rounded-lg shadow-lg border border-slate-100 py-1 z-50">
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}" class="block px-4 py-2 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-600 {{ app.request.locale == 'en' ? 'font-bold text-purple-600' : '' }}">English</a>
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ar'})) }}" class="block px-4 py-2 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-600 {{ app.request.locale == 'ar' ? 'font-bold text-purple-600' : '' }}">العربية</a>
                        </div>
                    </div>

                    <!-- Theme Toggle (Visual Only) -->
                    <button class="p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-full transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                        </svg>
                    </button>

                    <!-- Notifications -->
                    <button class="p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-full transition-colors relative">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                         <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
                    </button>

                    <!-- User Menu -->
                    <div class="relative ms-2" x-data="{ open: false }">
                        <button @click="open = !open" class="flex items-center">
                            <div class="w-8 h-8 rounded-full bg-indigo-100 border border-indigo-200 flex items-center justify-center text-indigo-700 overflow-hidden">
                                <img src="https://i.pravatar.cc/150?u={{ app.user.email }}" alt="{{ app.user.name }}" class="w-full h-full object-cover">
                            </div>
                        </button>
                        
                        <div x-show="open" @click.away="open = false" x-transition.origin.top.right class="absolute end-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-slate-100 py-1 z-50">
                            <div class="px-4 py-2 border-b border-slate-100">
                                <p class="text-sm font-semibold text-slate-900 truncate">{{ app.user.name|default('User') }}</p>
                                <p class="text-xs text-slate-500 truncate">{{ app.user.email }}</p>
                            </div>
                             <a href="{{ path('app_profile_edit') }}" class="block px-4 py-2 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-600">
                                {{ 'menu.settings'|trans }}
                            </a>
                            <div class="border-t border-slate-100 my-1"></div>
                            <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-600">
                                {{ 'menu.logout'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6">
            {% block dashboard_content %}{% endblock %}
        </main>
        
        <!-- Footer -->
         <footer class="bg-white border-t border-slate-200 py-4 px-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-slate-500">
                <p>&copy; {{ 'now'|date('Y') }} FlyonUI. Made with <span class="text-red-500">♥</span> for a better web.</p>
                <div class="flex gap-4">
                     <a href="#" class="hover:text-purple-600 transition-colors">Home</a>
                     <a href="#" class="hover:text-purple-600 transition-colors">Pages</a>
                     <a href="#" class="hover:text-purple-600 transition-colors">Hashtag Performance</a>
                </div>
            </div>
        </footer>
    </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
{% endblock %}

