{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-slate-50 flex items-center justify-center p-4" dir="{{ app.request.locale == 'ar' ? 'rtl' : 'ltr' }}">
    <div class="w-full max-w-md">
        <!-- Logo and Branding -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center gap-2 mb-4">
                <div class="w-10 h-10 rounded-lg bg-purple-600 flex items-center justify-center text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <span class="text-2xl font-bold text-slate-800">FlyonUI</span>
            </div>
            <h1 class="text-2xl font-bold text-slate-900 mb-2">{% block auth_title %}{% endblock %}</h1>
            <p class="text-slate-600">{% block auth_subtitle %}{% endblock %}</p>
        </div>

        <!-- Auth Card -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8">
            {% block auth_content %}{% endblock %}
        </div>

        <!-- Footer Links -->
        <div class="text-center mt-6">
            {% block auth_footer %}{% endblock %}
        </div>
    </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
{% endblock %}
