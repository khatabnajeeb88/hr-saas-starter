{% extends 'base.html.twig' %}

{% block title %}FlyonUI Test{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">FlyonUI Test Page</h1>

    <!-- Accordion Component -->
    <div class="accordion mb-8">
        <div class="accordion-item active" id="payment-accordion">
            <button class="accordion-toggle inline-flex items-center gap-x-4 text-start" aria-controls="payment-collapse" aria-expanded="true">
                <span class="icon-[tabler--credit-card] size-6 text-base-content"></span>
                <span class="text-base-content font-medium">Payment Information</span>
                <span class="icon-[tabler--chevron-left] accordion-item-active:-rotate-90 text-base-content ms-auto size-5 shrink-0 transition-transform duration-300 rtl:-rotate-180"></span>
            </button>
            <div id="payment-collapse" class="accordion-content w-full overflow-hidden transition-[height] duration-300" aria-labelledby="payment-accordion" role="region">
                 <div class="px-5 pb-4">
                    <p class="text-base-content/80 font-normal">
                        Content for payment information.
                    </p>
                </div>
            </div>
        </div>
        <div class="accordion-item" id="delivery-accordion">
            <button class="accordion-toggle inline-flex items-center gap-x-4 text-start" aria-controls="delivery-collapse" aria-expanded="false">
                <span class="icon-[tabler--truck] size-6 text-base-content"></span>
                <span class="text-base-content font-medium">Delivery Address</span>
                <span class="icon-[tabler--chevron-left] accordion-item-active:-rotate-90 text-base-content ms-auto size-5 shrink-0 transition-transform duration-300 rtl:-rotate-180"></span>
            </button>
            <div id="delivery-collapse" class="accordion-content hidden w-full overflow-hidden transition-[height] duration-300" aria-labelledby="delivery-accordion" role="region">
                <div class="px-5 pb-4">
                    <p class="text-base-content/80 font-normal">
                        Content for delivery address.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons with Icons -->
    <div class="flex gap-4 mb-8">
        <button class="btn btn-primary">
            <span class="icon-[tabler--check] text-xl"></span>
            Primary Button
        </button>
        <button class="btn btn-secondary">
            <span class="icon-[tabler--x] text-xl"></span>
            Secondary Button
        </button>
    </div>
</div>
{% endblock %}
